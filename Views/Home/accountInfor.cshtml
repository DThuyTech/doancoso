<head>

    <link href="/css/Account.css" rel="stylesheet" />

</head>

<body>
    <div class="row rowavt">

        @{

            string age;
            string sex;
            string height;
            string weight;
            int hoatdong=0;
            int mucdich = 0;
            if (userinfor is null)
            {
                age = "chua nhap";
                sex = "chua nhap";
                height = "chua nhap";
                weight = "chua nhap";

            }

            else
            {
                //InforUser inforUser;

                hoatdong = userinfor.Activ;
                age = userinfor.ages.ToString();
                sex = userinfor.sexs.ToString();
                height = userinfor.heights.ToString();
