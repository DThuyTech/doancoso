@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="contactUs">
    <div class="title">
        <h2>Contact us</h2>
    </div>
    <div class="box">
        <div class="contact form">
            <h3>Get Feedback</h3>          
            <form action="" method="post" id="submit_form">
                <div class="msg"></div>
                <div class="formBox">
                    <div class="row50">
                        <div class="inputBox">
                            <label>Name</label>
                            <input type="text" name="fullname" class="form_input"/>
                            <span class="required"></span>
                        </div>
                    </div>
                    <div class="row50">
                        <div class="inputBox">
                            <label>Email</label>
                            <input type="email" name="email" class="form_input" />
                            <span class="required"></span>
                        </div>
                    </div>
                    <div class="row50">
                        <div class="inputBox">
                            <label>PhoneNumber</label>
                            <input type="tel" name="phone" class="form_input" />
                            <span class="required"></span>
                        </div>
                    </div>
                    <div class="row50">
                        <div class="inputBox">
                            <label>Feedback</label>
                            <input type="text" name="feedback" class="form_input" />
                            <span class="required"></span>
                        </div>
                    </div>
                    <div class="row50">
                        <div class="inputBox">
                            <input type="submit" value="Send" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="contact info">
            <h3>Contact Info</h3>
            <div class="infoBox">
               
                <div>
                    <span><ion-icon name="location"></ion-icon></span>
                    <a href="#">Ho Chi Minh City, VietNam</a>
                </div>
                <div>
                    <span> <ion-icon name="mail"></ion-icon></span>
                    <a href="mailto:hutech@hutech.edu.vn">hutech@hutech.edu.vn</a>
                </div>
                <div>
                    <span><ion-icon name="call"></ion-icon></span>
                    <a href="tel:(028) 5445 7777">(028) 5445 7777</a>
                </div>

                <ul class="sci">
                    <li> <a href="https://www.facebook.com/hutechuniversity"><ion-icon name="logo-facebook">    </ion-icon> </a></li>
                    <li> <a href="https://www.youtube.com/c/HUTECHChannel"><ion-icon name="logo-youtube"></ion-icon></a></li>
                    <li> <a href="https://www.instagram.com/hutechuniversity/"><ion-icon name="logo-instagram">   </ion-icon></a></li>
                    <li> <a href="https://twitter.com/hutechvietnam"><ion-icon name="logo-twitter">     </ion-icon></a></li>
                </ul>
            </div>
        </div>
        <div class="contact map">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d6654.918917955511!2d106.71210051364288!3d10.801598805604703!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317528a459cb43ab%3A0x6c3d29d370b52a7e!2zVHLGsOG7nW5nIMSQ4bqhaSBo4buNYyBDw7RuZyBuZ2jhu4cgVFAuSENNIC0gSFVURUNI!5e0!3m2!1svi!2s!4v1681578615420!5m2!1svi!2s" 
            width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" 
            referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>
</div>







