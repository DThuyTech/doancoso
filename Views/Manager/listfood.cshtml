@{
    int pages = ViewBag.pagenumber;
}
@model List<Food>
<head>
    <meta charset="UTF-8">
    <title> Food</title>
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/font-awesome-line-awesome/css/all.min.css">
    <link rel="stylesheet" href="~/css/admin.css">
    <link rel="stylesheet" href="~/css/Listfood.css" />

</head>
<body>
    <div class="bodyadmin">


        <div class="cardInfor">
            <div>
                <div class="soluongmon">
                    <span>@Model.Count</span>
                    <p>Món</p>
                </div>
            </div>
        </div>
        <div class="action">
            <a asp-controller="Manager" asp-action="CreateFood" class="buttonCreate">Them mon an </a>
        </div>
        <form method="post" action="@Url.Action("ListFood","Manager")">
            <div class="pagination">
                <a href="#">&laquo;</a>
                @for (int i = 0; i < pages; i++)
                {

                    <input type="submit"  class="bntpa" name="idpage" value=@i placeholder=@i>



                }


                @* <a class="active" href="#">2</a>*@

                <a href="#">&raquo;</a>
            </div>

        </form>

        <div class="sidebar">
            <div class="sidebar-brand">
                <h2><span class="lab la-accusoft"></span> Accusoft</h2>

                <div class="sidebar-menu">
                    <ul>
                        <li>
                            <a href="ListUser" class="active">
                                <span class="las la-users"></span>
                                Khách hàng
                            </a>
                        </li>
                        <li>
                            <a href="ListFood">
                                <span class="las la-clipboard-list"></span>
                                Món ăn
                            </a>
                        </li>
                        <li>
                            <a asp-action="ListNutriFood" asp-controller="Manager">
                                <span class="las la-apple-alt"></span>
                                Dinh dưỡng
                            </a>
                        </li>
                        <li>
                            <a href="ListDBtrain">
                                <span class="las la-database"></span>
                                Datatrain
                            </a>
                        </li>
                        <li>
                            <a href="ListDVt">
                                <span class="las la-database"></span>
                                Đơn vị tính
                            </a>
                        </li>
                        <li>
                            <a href="ListLoaimon">
                                <span class="las la-database"></span>
                                Loại món
                            </a>
                        </li>

                        <li>
                            <a href="">
                                <span class="las la-database"></span>
                                Chi tiết dinh dưỡng
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </div>
        <div class="listfood-cardlist">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Tên món</th>
                      
                        <th>Don vi tinh</th>
                        <th>Calo</th>
                        <th>Chat xo</th>
                        <th>Chat dam</th>
                        <th>Chat beo   </th>
                        <th>Chinh sua</th>

                    </tr>

                </thead>
                <tbody>
                    @{
                        int buoi = 0;
                    }
                    @foreach (Food item in Model)
                    {


                        <tr>
                          <td>@item.Id</td>
                            <td>@item.Name</td>
                         
                            <td>@item.DVTid</td>
                            <td>@item.Calo</td>
                            <td>@item.chatxo</td>
                            <td>@item.chatdam</td>
                            <td>@item.chatbeo</td>
                            <td>
                                <ul>
                                  
                                    <a asp-action="EditFood" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                                  
                                </ul>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</body>
