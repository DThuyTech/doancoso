@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div style="max-width: 350px; margin: 0 auto; padding:0 ">
    <div class="wrapper">
        <div class="form-login">
            <h2>Create a new account</h2>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">           
            <div class="input-box">
                <ion-icon name="mail-outline"></ion-icon>
                <input asp-for="Input.Email" class="form-input" autocomplete="username" aria-required="true" required />
                <label>Email</label>
            </div>
            <div class="input-box">
                <ion-icon name="key-outline"></ion-icon>
                <input asp-for="Input.Password" class="form-input" autocomplete="new-password" aria-required="true" required />
                <label>PassWord</label>
            </div>
            <div class="input-box">
                <ion-icon name="key-outline"></ion-icon>
                <input asp-for="Input.ConfirmPassword" class="form-input" autocomplete="new-password" aria-required="true" required />
                <label>ConFirmPassWord</label>
            </div>
            <button id="registerSubmit" type="submit" class="btn">Register</button>
        </form>
        </div>
    </div>
</div>
